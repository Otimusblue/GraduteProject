<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- this is new -->
        <item name="colorAccent">@color/colorPicker</item>

        <item name="android:datePickerStyle">@style/MyDatePickerDialogTheme</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
    <style name="MyTimePickerDialogTheme" parent="@android:style/Widget.Material.Light.TimePicker">
        <!-- this is new -->
        <item name="colorAccent">@color/colorPicker</item>

        <item name="android:datePickerStyle">@style/MyDatePickerDialogTheme</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>


</resources>
